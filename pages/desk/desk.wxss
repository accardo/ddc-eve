/**index.wxss**/
.movable-wrap {
  width: 100%;
  height: 330px;
}
.scroll-bg {
  background: #fff;
  padding: 0 27rpx;
  margin-bottom: 12rpx;
}
movable-view{
  width: 160rpx;
  height: 160rpx;
}
.scroll-view_h {
  width: 100%;
  white-space: nowrap;
}
.scroll-view_tab {
  width: 100%;
  height: 100rpx;
  display: flex;
  -webkit-align-items:center;
  align-items:center;
}
.scroll-view_tab view{
  padding: 8rpx 35rpx;
  display: inline-block;
  color: #9094A0;
  font-size: 26rpx;
  border-radius: 40rpx;
}
.scroll-view_tab view.active-true {
  background:linear-gradient(302deg,rgba(255,101,131,1) 0%,rgba(255,121,108,1) 51%,rgba(255,190,103,1) 100%);
  color: #fff;
}
.view-img {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  margin: 12rpx;
}
.scale-img {
  width: 100%;
  height: 100%;
}

.close {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #fff;
  color: #666666;
  font-size: 30rpx;
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  margin-left: -20rpx;
  border-radius: 50%;
  
}

.view-img.block::before{
  content: ' . ';
  display: block;
}
.scroll-view_cont{
  margin-top: -12rpx;
}
.scroll-view_cont .left,
.scroll-view_cont .right{
  height: 144rpx;
}
.scroll-view_cont image{
  border-radius:16px;
}
.scroll-view_cont .left image:first-child,
.scroll-view_cont .right image:first-child{
  margin-left: 0;
}
.scroll-view_cont .left image:last-child,
.scroll-view_cont .right image:last-child{
  margin-right: 0;
}
.nextStep{
  width: 532rpx;
  height: 90rpx;
  line-height: 90rpx;
  background:linear-gradient(302deg,#FF6583 0%,#FF796C 51%,#FFBE67 100%);
  box-shadow: 5rpx 5rpx 10rpx #FFBE67;
  border-radius:50px;
  border: none;
  margin-top: 50rpx;
  font-size: 40rpx;
  color: #ffffff;
  margin-bottom: 20rpx;
}