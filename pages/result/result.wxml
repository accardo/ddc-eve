<!--pages/result.wxml-->
<view class="result-wrap">
  <canvas style="width: 100%; height: 900rpx; position: fixed; left: -9999px; overflow: hidden;" canvas-id="canvasId"></canvas>
  <view class="canvas-wrap">
    <image src="{{canvasBg}}" mode="widthFix"></image>
    <view class="step-botton">
      <button class="shareButton"
              wx:if="{{canvasBg && saveImgBtnHidden}}" bindtap="canvasSave" >点击保存</button>
      <button class="shareButton"
              wx:if="{{canvasBg && openSettingBtnHidden}}" bindopensetting='handleSetting'
              open-type="openSetting">去授权</button>
      <button wx:if="{{canvasBg}}" class="nextStep" type="primary"
              data-id="shareBtn" open-type="share">
        邀请朋友参加
      </button>
    </view>
  </view>
  <view class="wx-code">
    <image src="{{shareImg}}" mode="widthFix" bindtap="bindNavTo"></image>
  </view>
</view>
