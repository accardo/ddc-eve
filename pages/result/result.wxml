<!--pages/result.wxml-->
<view class="result-wrap">
  <canvas style="width: 100%; height: 450px; position:fixed; left: -9999px; overflow:hidden;" canvas-id="canvasId"></canvas>
  <view class="canvas-wrap">
    <view wx:if="{{!canvasBg}}" class="loading">餐桌绘制中,请稍后...</view>
    <image src="{{canvasBg}}" mode="widthFix"></image>
    <button type='primary' class="nextStep"
            wx:if="{{canvasBg && saveImgBtnHidden}}" bindtap="canvasSave" >点击保存</button>
    <button type='primary' class="nextStep"
            wx:if="{{canvasBg && openSettingBtnHidden}}" bindopensetting='handleSetting'
            open-type="openSetting">去授权</button>
  </view>
  <view class="wx-code">
    <image src="{{codeBg}}" mode="widthFix"></image>
  </view>
</view>
