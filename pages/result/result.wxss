@import "../index.wxss";
/* pages/result.wxss */
page{
  height: auto;
}
.result-wrap {
  padding-top: 1rpx;
  width: 100%;
  height: 100%;
  background:linear-gradient(302deg,rgba(255,101,131,1) 0%,rgba(255,121,108,1) 51%,rgba(255,190,103,1) 100%);
}
.canvas-wrap {
  width: 686rpx;
  height: 1000rpx;
  background: #fff;
  border-radius: 20rpx;
  margin: 16rpx auto 0;
  overflow: hidden;
}
.canvas-wrap image {
  display: block;
  width: 94%;
  margin: 0 auto;
}
.nextStep {
  margin: 0 auto;
}
.wx-code {
  width: 686rpx;
  margin:32rpx auto;
}
.wx-code image {
  display: block;
  width: 100%;
  height: 100%;
}
.loading{
  text-align: center;
  margin-top: 100rpx;
}
.step-botton{
  width: 90%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.step-botton button {
  margin: 0 20rpx;
}
.shareButton {
  width: 532rpx;
  height: 90rpx;
  line-height: 80rpx;
  background: #fff;
  border: #FF6583 solid 5rpx;
  box-shadow: 5rpx 5rpx 10rpx #FFBE67;
  border-radius:50px;
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #FF6583;
  margin-bottom: 26rpx;
}